<link rel="stylesheet" href="<%= assetPath('css/home.css')%>" />
<link rel="stylesheet" href="<%= assetPath('css/chat_box.css')%>">
<main id="home-container">
  <section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">
      <textarea name="content" cols="30" rows="3" placeholder="What's on your mind?" required></textarea>
      <input type="submit" value="Post" />
    </form>
    <%}%>
    <hr />
    <div id="posts-list-container">
      <ul>
        <% for(post of posts) {%> <%- include('_post.ejs');%> <%}%>
      </ul>
    </div>
  </section>
  <div class="vertical"></div>
  <aside id="people">
    <section id="friends">
      <h4>Users</h4>
      <% for (u of all_users){%>
    <p>
      <a href="/users/profile/<%= u.id%>"><%=u.name%></a>
    </p>
    <%}%>
    </section>
    <% if(locals.user){%>
    <hr />
    <section id="friends">
      <h4>Friends</h4>
      <% for (u of friends){%>
      <p>
        <a href="/users/profile/<%= u._id%>"><%=u.name%></a>
      </p>
      <%}%>
    </section>
    <%}%>
      </aside>
      <%- include('_chat_box') -%>
</main>

<script src="<%= assetPath('js/home_posts.js')%>"></script>
<script src="<%= assetPath('js/home_comments.js')%>"></script>
<script src="<%= assetPath('js/home_likes.js')%>"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.1/socket.io.js"
  integrity="sha512-AcZyhRP/tbAEsXCCGlziPun5iFvcSUpEz2jKkx0blkYKbxU81F+iq8FURwPn1sYFeksJ+sDDrI5XujsqSobWdQ=="
  crossorigin="anonymous"></script>
<script src="<%= assetPath('js/chat_engine.js')%>"></script>
<% if(locals.user){%>
<script>
  new ChatEngine('user-chat-box', '<%= locals.user.email%>')
</script>
<%}%>