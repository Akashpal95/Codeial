<link rel="stylesheet" href="<%= assetPath('css/user_sign_in.css')%>" />
<div id="sign-in-container">
  <div id="left-container">
    <img
      id="sign-in-img"
      src="<%= assetPath('images/sign-up.svg')%>"
      alt="Sign Up Image"
    />
    <a href="/users/sign-in">Already have an account.</a>
  </div>
  <div id="right-container">
    <h3>Sign Up</h3>
    <form
      id="sign-in-form"
      action="/users/create"
      method="POST"
      class="text-center"
    >
      <div class="md-form">
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Your Name"
          class="form-control"
          required
        />
      </div>
      <div class="md-form">
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Your Email"
          class="form-control"
          required
        />
      </div>
      <div class="md-form">
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          class="form-control"
          required
        />
      </div>
      <div class="md-form">
        <input
          type="password"
          id="confirm-password"
          name="confirm_password"
          placeholder="Confirm Password"
          class="form-control"
          required
        />
      </div>
      <input
        id="btnSubmit"
        class="btn btn-block my-4"
        type="submit"
        value="Sign Up"
      />
    </form>
    <div style="width:90%;display: flex; justify-content:space-between;">
      <p>
        <a href="/users/forgot-password" style="font-size: 0.8rem;"
          >Forgot Password?</a
        >
      </p>
      <a href="/users/auth/google">
        <p id="google-login-button">
          <span style="font-size: 0.7rem">or login with </span>
          <img
            src="https://image.flaticon.com/icons/svg/2965/2965278.svg"
            alt="Google"
            style="width:20px"
          />
        </p>
      </a>
    </div>
  </div>
</div>
